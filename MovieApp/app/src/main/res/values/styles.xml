<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayoutSignIn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:layout_marginBottom">15sp</item>
    </style>

    <style name="ImageViewSignIn">
        <item name="android:layout_width">120sp</item>
        <item name="android:layout_height">120sp</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:backgroundTint">@color/teal_700</item>
    </style>

    <style name="ButtonSignIn">
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:layout_marginTop">40sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleSignIn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListMovieRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginEnd">10sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">20sp</item>
    </style>

    <style name="ListMovieEmptyState">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemMovieImage">
        <item name="android:layout_width">120sp</item>
        <item name="android:layout_height">200sp</item>
    </style>

    <style name="ItemMovieName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">12sp</item>
        <item name="android:layout_marginEnd">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>